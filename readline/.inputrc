# Color the common prefix
set colored-completion-prefix on

# Color files by types
# Note that this may cause completion text blink in some terminals (e.g. xterm).
set colored-stats on

# Perform file completion in a case insensitive fashion
set completion-ignore-case on

# Treat hyphens and underscores as equivalent
set completion-map-case on

# Do not display control characters
set echo-control-characters off

# Immediately add a trailing slash when autocompleting symlinks to directories
set mark-symlinked-directories on

# Display matches for ambiguous patterns at first tab press
set show-all-if-ambiguous on

# Expand history with space bar
# E.g. typing !!<space> will replace the !! with your last command
Space:magic-space

# Incrementally search history with ctrl and up/down arrows
"\e[1;5A": history-search-backward
"\e[1;5B": history-search-forward

# Jump words with ctrl and left/right arrows
"\e[1;5C": forward-word
"\e[1;5D": backward-word

# Jump to beggining/end of line with home/end keys
"\e[1~": beginning-of-line
"\e[4~": end-of-line

# Toggle ovewrite mode with insert key
"\e[2~": overwrite-mode

# Delete characters with delete key
"\e[3~": delete-char
